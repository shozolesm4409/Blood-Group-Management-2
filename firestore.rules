
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // logic for all authenticated users (Development Mode)
    // 'write' includes create, update, and delete
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /donations/{donationId} {
      allow read, write: if request.auth != null;
    }
    
    match /logs/{logId} {
      allow read, write: if request.auth != null;
    }

    match /feedbacks/{feedbackId} {
      allow read, write: if request.auth != null;
    }

    // Support for messaging/chat system
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Support for system settings and permission overrides
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Support for the archive/deletion system
    match /deleted_users/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /deleted_donations/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}

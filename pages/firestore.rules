
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function for Auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user is a system Admin
    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN' || 
         request.auth.token.email == 'shozolesm4409@gmail.com');
    }

    // Check if the user is an Editor or Admin
    function isEditor() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'EDITOR' || isAdmin());
    }

    // --- My Notice Collection ---
    match /notices/{noticeId} {
      allow read: if true; 
      allow create, update: if isEditor();
      allow delete: if isAdmin(); // Restricted to Admin only as per request
    }

    // --- Experience Feedback ---
    match /feedbacks/{feedbackId} {
      allow read: if true; 
      allow create: if isAuthenticated(); 
      allow update: if isEditor(); 
      allow delete: if isAdmin(); // Restricted to Admin only as per request
    }

    // --- System Settings (Landing Page Config) ---
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // --- Donor Directory & Users ---
    match /users/{userId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isEditor());
      allow delete: if isAdmin();
    }
    
    // --- Donation Records ---
    match /donations/{donationId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isEditor();
      allow delete: if isEditor();
    }

    // --- Support Center (Chat Messages) ---
    match /messages/{messageId} {
      allow read, write: if isAuthenticated();
    }

    // --- Audit Logs ---
    match /logs/{logId} {
      allow read: if isEditor();
      allow create: if isAuthenticated();
      allow delete: if isEditor();
    }

    // --- System Archives (Deleted Records) ---
    match /deleted_users/{docId} {
      allow read, write: if isAdmin();
    }
    
    match /deleted_donations/{docId} {
      allow read, write: if isEditor();
    }

    match /deleted_logs/{docId} {
      allow read, write: if isEditor();
    }

    match /deleted_feedbacks/{docId} {
      allow read, write: if isAdmin(); // Sync with Admin-only delete on main collection
    }

    match /deleted_notices/{docId} {
      allow read, write: if isAdmin(); // Sync with Admin-only delete on main collection
    }

    match /revoked_permissions/{docId} {
      allow read, write: if isAdmin();
    }

    // --- Fallback ---
    match /{path=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}